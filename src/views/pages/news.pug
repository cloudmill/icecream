extends ../layouts/master.pug

block header
  include ../partials/_header.pug

block content
  main.page-news
    .left-container.left-container--tab-nav
    .left-container
      +title('Новости', ['Новости'], 'page-news__mainTitle')
      nav.tab-nav.tab-nav--alt.news__tab-nav(data-aos='fade-up')
        .tab-nav__wrapper.excursion__tab-nav-wrapper
          ul.tab-nav__list
            -
              var tabs = [
                {text: 'Новости', active: true},
                {text: 'Пресс–релизы'},
              ];
            each tab in tabs
              li.tab-nav__item(class = tab.active ? 'tab-nav__item--active': '')
                a.tab-nav__link(href="#")
                  | #{tab.text}
      .block-aside(data-sticky-container)
        .news
          .news-list.row.moreDetail--js
            .col.col__xl-8.col__md-6.col__xs-12.more__item--js(data-aos='fade-up')
              +newsList('news-list__item--main')
            - for (let i = 1; i < 3; i++)
              - for (let j = 1; j < 3; j++)
                .col.col__xl-4.col__md-6.col__xs-12.more__item--js(data-aos='fade-up'): +newsList('news-list__item--light')
              - for (let j = 1; j < 3; j++)
                .col.col__xl-4.col__md-6.col__xs-12.more__item--js(data-aos='fade-up'): +newsList()
            .col.col__xl-4.col__md-6.col__xs-12.more__item--js(data-aos='fade-up'): +newsList('news-list__item--light')
            .col.col__xl-4.col__md-6.col__xs-12.more__item--js(data-aos='fade-up'): +newsList()
          .row
            .col.col__xl-8.col__md-6.col__xs-12.ml-auto.margtop80(data-aos='fade-up')
              a.btn.btn--default.btn--full.btn-icon(href='#')
                span Показать еще
                i.sprite.sprite--arr-d
        include ../components/_sidebar


block footer
  include ../partials/_footer.pug
