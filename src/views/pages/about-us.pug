extends ../layouts/master.pug

block header
  include ../partials/_header.pug

block content
  //-
    микс с блоком страницы mission (.page-mission)
    т.к. часть стилей переиспользуется
  main.page-about-us.page-mission
    .left-container.page-about-us__left-container
      .mainTitle.page-mission__mainTitle
        ul.breadcrumbs
          li.breadcrumbs__item
            a.breadcrumbs__link(href="#")
              |О нас
          li.breadcrumbs__item
            a.breadcrumbs__link(href="#")
              |Мир Чистой Линии
          li.breadcrumbs__item.active
            a.breadcrumbs__link(href="/")
