extends ../layouts/master.pug

block header
  include ../partials/_header.pug

block content
  main.page-news
    .left-container
      +title('Пресс–релизы', ['Пресс–релизы'])
      ul.filter.filter--js
        li.active(data-text='*') Все
        li(data-text='2020') 2020
        li(data-text='2019') 2019
        li(data-text='2018') 2018
        li(data-text='2017') 2017
        li(data-text='2016') 2016
        li.last.hidden__xs
          +img('icons/rotate-cw.svg')
          span Сбросить
      ul.filter.filter--js.visible__sm.visible__xs
        li.last
          +img('icons/rotate-cw.svg')
          span Сбросить
      .block-aside(data-sticky-container)
        .news
          .news-list.row.moreDetail--js
            .col.col__xl-8.col__md-6.col__xs-12.more__item--js.filter__item--js(data-text='2020')
              +newsList('news-list__item--main')
            - for (let i = 1; i < 3; i++)
              - for (let j = 1; j < 3; j++)
                .col.col__xl-4.col__md-6.col__xs-12.more__item--js.filter__item--js(data-text='2019')
                  +newsList('news-list__item--light')
              - for (let j = 1; j < 3; j++)
                .col.col__xl-4.col__md-6.col__xs-12.more__item--js.filter__item--js(data-text='2018')
                  +newsList()
            .col.col__lg-4.col__md-6.col__xs-12.more__item--js.filter__item--js(data-text='2017')
              +newsList('news-list__item--light')
            .col.col__lg-4.col__md-6.col__xs-12.more__item--js.filter__item--js(data-text='2016')
              +newsList()
          .row
            .col.col__xl-8.col__md-6.col__xs-12.ml-auto.margtop70(data-aos='fade-up')
              a.btn.btn--default.btn--full.btn-icon(href='#')
                span Показать еще
                i.sprite.sprite--arr-d
        include ../components/_sidebar


block footer
  include ../partials/_footer.pug
