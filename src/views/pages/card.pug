extends ../layouts/master.pug

block header
  include ../partials/_header.pug

block content
  main.page-card
    .left-container
      .mainTitle
        .breadcrumbs-wrapper
          ul.breadcrumbs
            li.breadcrumbs__item
              a.breadcrumbs__link(href="#") Пломбир с кусочками клубники в вафельном стаканчике, 80г
            li.breadcrumbs__item
              a.breadcrumbs__link(href="#") Мороженое
            li.breadcrumbs__item.active
              a.breadcrumbs__link(href="/")
                svg(width='23' height='22' viewbox='0 0 23 22' fill='none' xmlns='http://www.w3.org/2000/svg')
                  path(fill-rule='evenodd' clip-rule='evenodd' d='M11.5958 0.578664C11.9567 0.295897 12.4637 0.294803 12.8259 0.576012L22.6131 8.17601C23.0493 8.51474 23.1283 9.14295 22.7896 9.57917C22.4509 10.0154 21.8227 10.0944 21.3865 9.75568L12.2153 2.63406L7.6165 6.23701C7.18176 6.57762 6.55321 6.5013 6.2126 6.06655C5.87199 5.6318 5.94831 5.00326 6.38306 4.66265L11.5958 0.578664Z' fill='#5DCBEE')
