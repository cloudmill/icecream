                        .summ 145 000
              .referral__faq-users-item(data-aos='fade-up')
                .referral__faq-users_top
                  .referral__faq-users-ava
                    +maskAva('referral/user-2.jpg', 'pattern2', 'image2')
                  .referral__faq-users-info
                    .referral__faq-users-name Захарова Екатерина
                    .referral__faq-users-age 32 года, Москва
                    .referral__faq-users-orders
                      .referral__faq-users-order
                        p Заказов
                        .summ 315
                      .referral__faq-users-order
                        p На сумму, руб.
                        .summ 2 047 500
                .referral__faq-users_bot.row
                  .col.col__md-6.col__xs-12
                    .referral__faq-users-graph
                      .referral__faq-users-graph_t
                        div График доходности, руб.
                        div 2020
                      .referral__faq-users-graph_m
                        .graphs
                          .graphs-item(style='height: 24px')
                            span
                          .graphs-item(style='height: 44px')
