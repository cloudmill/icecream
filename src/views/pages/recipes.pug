extends ../layouts/master.pug

block header
  include ../partials/_header.pug

block content
  main.page-recipes
    .left-container
      +title('Рецепты', ['Рецепты'])
      .catalogFilter--btn.btn-icon.catalogFilter--js
        span Фильтры
        +img('icons/plus-sq.svg')
      .catalogFilter
        .catalogFilter__item
          select.select.select-template(data-title='Тип блюда', data-theme='default only-text')
            option(value='filter-1') Все
            option(value='filter-2') Завтраки
            option(value='filter-3') Обеды
            option(value='filter-4') Ужины
            option(value='filter-5') Все
            option(value='filter-6') Завтраки
            option(value='filter-7') Обеды
            option(value='filter-8') Ужины
            option(value='filter-9') Все
            option(value='filter-10') Завтраки
            option(value='filter-11') Обеды
            option(value='filter-12') Ужины
        .catalogFilter__item
          select.select.select-template(data-title='Продукт', data-theme='default only-text')
            option(value='filter-1') Все
            option(value='filter-2') Пломбир с кусочками клубники в вафельном стаканчике, 80г
            option(value='filter-3') Пломбир с кусочками клубники в вафельном стаканчике, 80г
            option(value='filter-4') Пломбир с кусочками клубники в вафельном стаканчике, 80г
        .catalogFilter__item
          select.select.select-template(data-title='Время готовки', data-theme='default only-text')
            option(value='filter-1') Все
            option(value='filter-2') Завтраки
            option(value='filter-3') Обеды
            option(value='filter-4') Ужины
        .catalogFilter__item
          .btn.btn--info.btn__lg.btn-icon.btn--full.reset-filter--js
            +img('icons/rotate-cw.svg')
            span Сбросить
      .block-aside(data-sticky-container)
        .interests
          .row.moreDetail--js.catalog(data-num='9')
            -
              let items = [
                'Творожные сырники',
                'Яблочный крамбл с медовым пломбиром',
                'Фирменные Омолоко-панкейки',
                'Омлет с творогом',
                'Авакадо запеченное с яйцом <br>и сыром',
                'Картофель в сметане',
              ]
            - for (let i = 0; i < 2; i++)
              each item, index in items
                .col.col__xl-4.col__md-6.col__xs-12.more__item--js(data-aos='fade-up')
                  a.catalog__item(href='#')
                    .img
                      .img__image
                        span
                          |30 #[small мин]
                        +img('interests/int-' + (index + 1) + '.jpg')
                    .catalog-desc
                      |!{item}
                    .catalog-tag
                      |Завтраки
          .row
            .col.col__lg-6.col__xs-12.centered-block(data-aos='fade-up')
              a.btn.btn--default.btn--full.btn-icon(href='#')
                span Показать еще
                i.sprite.sprite--arr-d
        aside.aside
          .sticky(data-margin-top="40")
            .sign-block(data-aos='fade-up')
              .form-request
                h4 Подписаться на рецепты
                form(action='' method='POST')
                  .form__group: +fieldInput('email', 'email', 'email', '', 'E–mail', true)
                  .checkbox.form__group
                    input(type="checkbox", id='sign', required)
                    label(for='sign') Согласен на обработку персональных данных в соответствии с #[a(href='#') политикой конфиденциальности]
                    .control-error
                  button.btn.btn--primary.btn__sm.btn--full.form--js(type='submit'): span Подписаться
              .form-response
                .inner
                  h4 Спасибо, подписка оформлена
                  button.btn.btn--primary.btn__sm.btn--full.reset--js(type='submit'): span Подписаться еще
block footer
  include ../partials/_footer.pug
